<div class="container mt-4">
  <h1>Employees</h1>
  <%= link_to 'New Employee', new_employee_path, class: "btn btn-primary mb-3" %>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Full Name</th>
        <th>Department</th>
        <th>Job Title</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.full_name %></td>
          <td><%= employee.department %></td>
          <td><%= employee.job_title %></td>
          <td><%= employee.email %></td>
          <td><%= employee.phone %></td>
          <td>
            <%= link_to 'Show', employee_path(employee), class: "btn btn-sm btn-info" %>
            <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-sm btn-warning" %>
            <%= button_to 'Delete', employee_path(employee), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
