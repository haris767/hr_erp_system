<%= form_with(model: employee, data: { turbo: false }, class: "row g-3") do |f| %>
<h1> Section 1: Personal Information</h1>
  <div class="col-md-6">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: "form-control" %>
    <%= f.object.errors[:full_name].any? ? content_tag(:div, f.object.errors[:full_name].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-6">
    <%= f.label :father_name %>
    <%= f.text_field :father_name, class: "form-control" %>
    <%= f.object.errors[:father_name].any? ? content_tag(:div, f.object.errors[:father_name].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4 d-none">
    <%= f.label :employee_number %>
    <%= f.text_field :employee_number, class: "form-control" %>
    <%= f.object.errors[:employee_number].any? ? content_tag(:div, f.object.errors[:employee_number].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4">
    <%= f.label :national_id %>
    <%= f.text_field :national_id, class: "form-control" %>
    <%= f.object.errors[:national_id].any? ? content_tag(:div, f.object.errors[:national_id].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4">
    <%= f.label :dob %>
    <%= f.date_field :dob, class: "form-control" %>
    <%= f.object.errors[:dob].any? ? content_tag(:div, f.object.errors[:dob].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-3">
    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female', 'Other'], {}, class: "form-select" %>
    <%= f.object.errors[:gender].any? ? content_tag(:div, f.object.errors[:gender].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-3">
    <%= f.label :grade %>
    <%= f.select :grade, ['SP-S1','SP-S2','SP-S3','SP-O','SP-M'], {}, class: "form-select" %>
    <%= f.object.errors[:grade].any? ? content_tag(:div, f.object.errors[:grade].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-3">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
    <%= f.object.errors[:phone].any? ? content_tag(:div, f.object.errors[:phone].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %>
    <%= f.object.errors[:email].any? ? content_tag(:div, f.object.errors[:email].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-12">
    <%= f.label :address %>
    <%= f.text_area :address, class: "form-control", rows: 2 %>
    <%= f.object.errors[:address].any? ? content_tag(:div, f.object.errors[:address].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4">
    <%= f.label :personal_number %>
    <%= f.text_field :personal_number, class: "form-control" %>
    <%= f.object.errors[:personal_number].any? ? content_tag(:div, f.object.errors[:personal_number].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4">
    <%= f.label :company_number %>
    <%= f.text_field :company_number, class: "form-control" %>
    <%= f.object.errors[:company_number].any? ? content_tag(:div, f.object.errors[:company_number].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-md-4">
    <%= f.label :assets_details %>
    <%= f.select :assets_details, ['Laptop', 'keyboard', 'Mouse','Mobile' ], {}, class: "form-select" %>
    <%= f.object.errors[:assets_details].any? ? content_tag(:div, f.object.errors[:assets_details].join(", "), class: 'text-danger') : '' %>
  </div>

