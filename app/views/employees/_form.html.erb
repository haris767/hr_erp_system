  <div class="col-md-4">
    <%= f.label :erp_role %>
    <%= f.select :erp_role, ['Admin', 'HR', 'Employee'], {}, class: "form-select" %>
    <%= f.object.errors[:erp_role].any? ? content_tag(:div, f.object.errors[:erp_role].join(", "), class: 'text-danger') : '' %>
  </div>

  <div class="col-12 mt-3">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
